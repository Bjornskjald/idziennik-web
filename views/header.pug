mixin nav(page)
	nav.teal(role='navigation')
		.nav-wrapper.container
			a#logo-container.brand-logo.white-text(href='#') iDziennik
			ul.right.hide-on-med-and-down
				li(class=page === 'pulpit' ? 'active' : undefined)
					a.white-text(href='/pulpit/') Pulpit
				li(class=page === 'oceny' ? 'active' : undefined)
					a.white-text(href='/oceny/') Oceny
				li
					a.white-text(href='/logout/') Wyloguj #{name}
			ul#nav-mobile.side-nav
				li(class=page === 'pulpit' ? 'active' : undefined)
					a(href='/pulpit/') Pulpit
				li(class=page === 'oceny' ? 'active' : undefined)
					a(href='/oceny/') Oceny
				li
					a(href='/logout/') Wyloguj #{name}
				|  
			a.button-collapse(href='#', data-activates='nav-mobile')
				i.material-icons menu

